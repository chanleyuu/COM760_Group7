<?xml version="1.0" ?>
    <robot name="week7bot">
    <!-- Create a robot chassis as Base Link -->
    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.5 0.3 0.07"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.5 1.0 1.0"/>
            </material>
        </visual>
        <!-- Base pose, collision and inertial -->
        <pose>0 0 0.1 0 0 0</pose>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.07"/>
            </geometry>
        </collision>
        <inertial>
        <mass value="5"/>
        <origin rpy="0 0 0" xyz="0 0 0.1"/>
        <inertia ixx="0.03954" ixy="0" ixz="0" iyy="0.10621" iyz="0" izz="0.10621"/>
        </inertial>
        <!-- caster -->
        <visual name="caster">
            <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black">
                <color rgba="0.05 0.05 0.05 1.0"/>
            </material>
        </visual>
        <!-- Caster collision and inertial -->
        <collision>
            <origin xyz="0.35 0 -0.05" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
        </inertial>
    </link>
    <!-- Create wheel right -->
    <link name="right_wheel">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </visual>
        <!--right wheel collision and inertial-->
        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.00053" ixy="0" ixz="0" iyy="0.00053" iyz="0" izz="0.001"/>
        </inertial>
    </link>
    <!-- Create wheel left -->
    <link name="left_wheel">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </visual>
        <!--left wheel collision and inertial-->
        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.00053" ixy="0" ixz="0" iyy="0.00053" iyz="0" izz="0.001"/>
        </inertial>
    </link>
    
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.010 0.03 0.03"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>
    
    <link name="camera_link_optical"></link>
    
    <link name="laser_sensor">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.1"/>
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder raduis="0.05" length="0.1"/>
            </geometry>
        </collision>
        
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.0015" ixy="0" ixz="0" iyy="0.0015" iyz="0" izz="0.0012"/>
        </inertial>
    </link>
    <!-- Joint for right wheel -->
    <joint name="joint_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.05 0.15 0"/>
        <child link="right_wheel"/>
        <parent link="base_link"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0" />
    </joint>
    <!-- Joint for left wheel -->
    <joint name="joint_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.05 -0.15 0"/>
        <child link="left_wheel"/>
        <parent link="base_link"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0" />
    </joint>
    
    <joint name="camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin xyz="0.25 0 0" rpy="0 0 0"/>
    </joint>
    
    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_link_optical"/>
        <origin xyz="0 0 0" rpy="-1.57 0 1.57"/>
    </joint>
    
    <joint name="joint_laser_sensor" type="fixed">
         <origin rpy="0 0 0" xyz="0.15 0 0.05"/>
         <parent link="base_link"/>
         <child link="laser_sensor"/>
    </joint>
    
    <!--specifying color in Gazebo-->
    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="camera_link">
        <material>Gazebo/Yellow</material>
        
        <sensor name="camera" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <camera>
                <horizontal_fov>1.089</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>8.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical</frame_name>
                <imageTopicName>image_raw</imageTopicName>
                <always_on>1</always_on>
                <update_rate>30</update_rate>
            </plugin>
        </sensor>
    </gazebo>
    
    <!--To add the sensor behaviour, we use the laser gazebo plugin-->
    <gazebo reference="laser_sensor">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/week7bot/laser/scan</topicName>
                <frameName>laser_sensor</frameName>
            </plugin>
        </sensor>
    </gazebo>
    
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_left_wheel</leftJoint>
            <rightJoint>joint_right_wheel</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.2</wheelDiameter>
            <torque>0.1</torque>
            <commandTopic>week7bot/cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
            <publishWheelTF>true</publishWheelTF>
            <publishOdom>true</publishOdom>
            <publishWheelJointState>true</publishWheelJointState>
            <legacyMode>true</legacyMode>
        </plugin>
    </gazebo>
</robot>